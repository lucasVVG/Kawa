
var paire p;
var paire pt;
var triple t;

class paire {
  attribute final int x;
  attribute int y;

  method void constructor(int x, int y) {
    this.x = x;
    this.y = y;
  }

  method int somme() {
    return this.x + this.y;
  }

  method int getX() {
    this.y = this.x;
    //this.x = 12;
    return this.x;
  }
}

class triple extends paire {
  attribute int z;

  method void constructor(int x, int y, int z) {
    this.x = x;
    this.y = y;
    this.z = z;
  }

  method int somme() {
    return x + y + z;
  }

  method int produit() {
    return this.x * this.y * this.z;
  }
}

main {
  p = new paire(1, 2);
  t = new triple(3, 4, 5);
  print(p.somme());
  print(t.somme());
  print(t.produit());
  pt = new triple(1, 2, 3);
  print(pt.somme());
  print(pt.getX());
  // affiche 3, puis 12, puis 60, puis 6, puis 1.
}
